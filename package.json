{
  "name": "log-reader-mcp",
  "version": "1.0.0",
  "main": "dist/mcp-server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hassansaadfr/log-reader-mcp.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp-server.js",
    "dev": "tsx src/mcp-server.ts",
    "watch": "tsx watch src/mcp-server.ts",
    "release": "semantic-release",
    "test": "node --no-warnings --experimental-vm-modules node_modules/.bin/jest",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write . && npm run lint:fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.1.0",
    "ts-jest": "^29.4.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "bin": {
    "log-reader-mcp": "bin/cli.js"
  },
  "files": [
    "bin/",
    "dist/",
    "scripts/",
    "templates/"
  ]
}
